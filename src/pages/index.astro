			.typing-text {
				overflow: hidden;
				white-space: pre-wrap;
				animation: typing 3s steps(40, end) forwards;
				margin: 0;
				width: 0;
				display: block;
				font-size: 1rem;
			}

			@keyframes typing {
        from { 
            width: 0;
            border-right: 2px solid transparent;
        }
        to { 
            width: 100%;
            border-right: 2px solid transparent;
        }
    }

			.social-button {
				opacity: 0;
				animation: fadeIn 0.5s ease-in forwards;
			}

			@keyframes fadeIn {
				from { 
					opacity: 0;
					transform: translateY(20px);
				}
				to { 
